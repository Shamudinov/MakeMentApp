<Window x:Class="Makement.Views.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Makement.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="UpdateWindow" Height="308" Width="400">
    <Canvas>
        <TextBlock Canvas.Left="100" Canvas.Top="20" FontSize="32" FontFamily="{StaticResource Montserrat}">MakeMent</TextBlock>
        <TextBlock Canvas.Left="80" Canvas.Top="120" FontSize="15" Foreground="Gray" FontFamily="{StaticResource Montserrat}">You need to update your app.</TextBlock>
        <TextBlock Canvas.Left="110" Canvas.Top="150" FontSize="16" FontFamily="{StaticResource Montserrat}" Background="#fe4066" Padding="30 10">           
            <Hyperlink Foreground="White" TextDecorations="" NavigateUri="http://makement.org/auth/download" RequestNavigate="Hyperlink_RequestNavigate">
                Update Now
            </Hyperlink>
        </TextBlock>
    </Canvas>
</Window>
